generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id                Int      @id @default(autoincrement())
  email             String   @unique
  username          String   @unique
  password          String
  ip                String
  useragent         String
  isAdmin           Boolean  @default(false)
  isEmailConfirmed  Boolean  @default(false)
}
